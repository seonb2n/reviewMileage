<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.reviewmileage.infrastructures.mybatis.mapper.UserMapper">
    <select id="findAll" resultType="com.example.reviewmileage.infrastructures.mybatis.model.UserMapperDTO">
        SELECT * FROM user
    </select>

    <select id="save" parameterType="com.example.reviewmileage.infrastructures.mybatis.model.UserMapperDTO">
        INSERT into user(user_id, user_name, created_at, update_at, user_mileage_point, user_token)
        values (#{user_id}, #{user_name}, #{created_at}, #{update_at}, #{user_mileage_point}, #{user_token})
    </select>
</mapper>